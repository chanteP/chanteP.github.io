{
    "pure": false,
    "webDir": ".",
    "srcDir": "./app",
    "viewDir": "./app/views",
    "layoutDir": "./app/layout",
    "actionDir": "./app/bin",
    "deploy": {
        "targetDir": "./temp/static",
        "jsExportRule": "/*/index.js",
        "libExportRule": "/*/index.*"
    },
    "server": {
        "enable": true,
        "livereload": true,
        "port": "22222",
        "tempDir": "./temp",
        "templateEngine": "./app/bin/liquid",
        "defaultLayout": "main.html",
        "staticRoot": "./temp/static",
        "staticController": "/static",
        "staticHost": "",
        "suffixList": "",
        "router": {
            "/.*": "pageAction"
        }
    },
    "filePath": {
        "commonDir": "./app/common",
        "jsDir": "./app/pages",
        "libDir": "./app/lib",
        "cssDir": "./app/css",
        "imageDir": "./app/images",
        "resources": {
            "./app/css/fonts/**": "./css/fonts",
            "./app/posts/**": "../_posts",
            "./app/layout/**": "../_layouts",
            "./app/*config*": "../",
            "./app/CNAME": "../"
        }
    }
}